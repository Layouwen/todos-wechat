.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    border-top: 1px solid #e0e0e0;
}

.header {
    display: flex;
    align-items: center;
    margin: 20rpx;
    border: 1rpx solid #e0e0e0;
    box-shadow: 0 0 5rpx #e0e0e0;
    border-radius: 5rpx;
}

.header>image {
    margin: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.header>input{
    height: 80rpx;
    flex: 1;
    font-size: 30rpx;
}

.todos {
    margin: 20rpx;
    border: 1rpx solid #e0e0e0;
    border-radius: 5rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
}

.todos > .item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.todos > .item:last-child {
    border-bottom: none;
}

.todos > .item > text {
    flex: 1;
    margin-left: 20rpx;
    color: #444;
    font-size: 30rpx;
}

.todos > .item.completed > text {
    color: #888;
    text-decoration: line-through;
}

.footer {
    display: flex;
    justify-content: space-between;
    margin: 20rpx;
    font-size: 30rpx; 
    color: #333;
}

.null {
    flex: 1;
    display: flex;
    justify-content: center;
    margin: 20rpx;
    color: red;
}